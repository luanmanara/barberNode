<%- include("../partials/header") %>
<div class="h-screen flex flex-col w-full">
    <div class="flex flex-col justify-center items-center h-1/3 py-12 bg-center bg-no-repeat bg-cover w-full " style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/images/bg_home.jfif');">
        <h1 class="text-2xl xl:text-4xl text-white font-medium mb-2" >AGENDE AGORA SEU HOR√ÅRIO</h1>
        <hr class="w-1/4 font-bold">
    </div>
    <div class="flex flex-col-reverse h-2/3 xl:flex-row">
        <div class="h-2/3 xl:h-auto w-full xl:w-1/3 flex flex-col">
            <div class="flex justify-around items-center text-center xl:h-1/5 bg-blue-600">
                <% let mesA = subtraiMes(currentDate.toString()).getTime(); %>
                <a class="block" href="/agendamentos/<%- mesA %>">
                    <i class="fas fa-angle-left text-white"></i>
                </a>
                <h1 class="text-white text-3xl"> <%- monthYear %></h1>
                <% let mesP = adicionaMes(currentDate.toString()).getTime(); %>
                <a class="block" href="/agendamentos/<%- mesP %>">
                    <i class="fas fa-angle-right text-white"></i>
                </a>
            </div>
            <div class="flex w-full flex-col h-4/5 xl:h-4/5 flex-wrap">
                <% for(let i=0; i < 7; i++){ %>
                    <% let x = adicionaDia(firstDay.toString(), i); %>
                    <div class="flex flex-col w-auto h-full">
                        <div class="flex justify-center items-center text-center h-auto xl:h-1/5 bg-blue-500">
                            <h2 class="text-white">
                                <%- days[i] %>
                            </h2>
                        </div>
                        <div class="h-80 xl:h-4/5 w-full">
                            <% for(let j=0; j < 6; j++){ %>
                                <% let y = multiplicaDia(x.toString(), j); %>
                                <div class="h-1/6 text-xs shadow-sm text-center cursor-pointer">
                                    <span><%- y.getDate() %></span>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="h-1/3 xl:h-auto w-full xl:w-2/3 bg-blue-200 overflow-auto">
            <iframe class="w-full h-full" src="/horarios" frameborder="0">
            </iframe>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>